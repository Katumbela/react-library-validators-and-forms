{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2016",
            "dom"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}